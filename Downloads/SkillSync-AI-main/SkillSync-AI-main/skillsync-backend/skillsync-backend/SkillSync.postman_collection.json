{
  "info": {
    "name": "SkillSync Backend",
    "_postman_id": "skillsync-backend-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "http://localhost:4000/health"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\":\"Alice\",\n  \"email\":\"alice@example.com\",\n  \"password\":\"Passw0rd!\"\n}"
        },
        "url": "http://localhost:4000/api/auth/register"
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\":\"alice@example.com\",\n  \"password\":\"Passw0rd!\"\n}"
        },
        "url": "http://localhost:4000/api/auth/login"
      }
    },
    {
      "name": "Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "http://localhost:4000/api/users/me"
      }
    },
    {
      "name": "Roadmap Analyze",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"resumeText\":\"...\",\n  \"jobDescription\":\"...\"\n}"
        },
        "url": "http://localhost:4000/api/roadmap/analyze"
      }
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    }
  ]
}